 omx/gstomx.h         |  2 ++
 omx/gstomxaudiodec.c |  5 ++++
 omx/gstomxaudioenc.c |  4 ++++
 omx/gstomxvideodec.c |  5 ++++
 omx/gstomxvideoenc.c |  5 ++++
